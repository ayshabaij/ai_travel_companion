    width: 100%;
    position: relative;
    border-radius: 30px;
    background-color: #fff;
    height: 813px;
    overflow: hidden;
    text-align: left;
    font-size: 38.29px;
    color: #010001;
    font-family: Inter;
  }
</style>

<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", function() {
    const submitBtn = document.querySelector("#trip-end-date-form input[type='submit']");
    const form = document.getElementById("trip-end-date-form");
    const dateField = form.querySelector("input[name='trip_end_date']");
      const tripStartDate = new Date('<%= @trip_start_date %>'); // Replace with actual start date

      function validateDate(endDate) {
        const today = new Date();
        const endDateObj = new Date(endDate);
        const twoWeeksFromStartDate = new Date(tripStartDate);
        twoWeeksFromStartDate.setDate(tripStartDate.getDate() + 14);

        if (endDateObj < today) {
              return false; // End date is in the past
            }

            if (endDateObj > twoWeeksFromStartDate) {
              return false; // End date is more than 2 weeks after the start date
            }

          return true; // End date is valid
        }

        dateField.addEventListener("input", function() {
          const isValid = validateDate(dateField.value);

          if (isValid) {
            submitBtn.disabled = false;
            submitBtn.classList.add("active");
          } else {
            submitBtn.disabled = true;
            submitBtn.classList.remove("active");
          }
        });

        submitBtn.addEventListener("click", function(event) {
          event.preventDefault();

          if (validateDate(dateField.value)) {
            const endDate = dateField.value;

            fetch('http://localhost:4568/receive_trip_data', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({
                user_id: '<%= current_user.id %>',
                end_date: endDate
              })
            })
            .then(response => response.json())
            .then(data => {
              console.log('Success:', data);
                  form.submit(); // Proceed to the next form if needed
                })
            .catch((error) => {
              console.error('Error:', error);
            });
          }
        });
      });
    </script>
